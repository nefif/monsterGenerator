    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
//  if(txtUsuario.getText().equals("Nefi") && txtSenha.getText().equals("1234")){
//      JOptionPane.showMessageDialog(null, "Seja bem vindo ao Monsters Generator.");
//      new TelaPrincipal().setVisible(true);
//  }else{            
//      JOptionPane.showMessageDialog(null, "Acesso Negado. Favor realizar cadastro.");
//      TelaCadastroDugeonMasterMDI telaDM = new TelaCadastroDugeonMasterMDI();
//      jDesktopPane1.add(telaDM);
//      telaDM.setVisible(true);
//  }

   DugeonMasterDAO dao = new DugeonMasterDAO();
   
   if(dao.checkLogin(txtUsuario.getText(), txtSenha.getText())){
       new TelaPrincipal().setVisible(true);
       JOptionPane.showMessageDialog(null, "Seja bem vindo ao Monsters Generator.");
       this.dispose();
   }else{
       JOptionPane.showMessageDialog(null, "Login Incorreto ou inxistente. Realizar Cadastro ou tentar novamente");
   }


      

    }                                        

    private void txtUsuarioActionPerformed(java.awt.event.ActionEvent evt) {                                           
